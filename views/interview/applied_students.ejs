<h4>List of students applied for <%= company.company%> interview </h4>  

<%for(let i of company.students){%>
    <p>Username :<%= i.username%> </p>
    <p>Date: 
        <% if(interview.date !=0){%>
            <%= interview.date%>
        <%}else{%>
            <p>Not yet scheduled</p>
            <%}%>
    </p>
    <div class="list">
        <a class="a" href="/interview/results/<%=interview._id%>">Update Interview</a><br>
        <a class="a" href="/company/<%=company._id%>/allocate_interview/<%=i._id%>">Allocate Interview</a>
        <a class="a" href="/company/<%=company._id%>/delete/<%=i._id%>">drop interview</a>
    
    </div>
   
<%}%>    

<style>
    .list{
        margin:2px;
        display:flex;
        justify-content:center;
        align-items: center;
    }
    .a{
        height:30px;
        width:150px;
        text-align: center;
        background: orange;
        margin:10px 0px 0px 50px;
        border-radius:8px;
    }
     p{
      font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif ;
      margin:10px 1px 1px 50px;
    }
</style>
